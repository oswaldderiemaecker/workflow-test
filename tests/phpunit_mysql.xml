<?xml version="1.0" encoding="UTF-8"?>

<phpunit bootstrap="tests/pdo/bootstrap.php" 
         printerClass="PHPUnit_Util_TestDox_ResultPrinter_Text"
         colors="true">
    <php>
        <var name="db_type" value="mysql"/>
        <var name="db_name" value="hello_world_test"/>
        <var name="db_username" value="root"/>
        <var name="db_password" value=""/>
    </php>

    <testsuites>
        <testsuite name="Hello World Test Suite">
            <directory>./tests/pdo</directory>
        </testsuite>
    </testsuites>

    <filter>
        <whitelist>
            <directory>./</directory>
            <exclude>
	       <directory>./tests/pdo</directory>
            </exclude>
        </whitelist>
    </filter>
</phpunit>
